<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <div class="post">
    <%= image_tag post.get_post_image(150, 100) %><br>
    <h2><%= post.title %></h2>
    <p><%= post.text %></p>
    <p>評価: <%= post.rate %></p>
    <p>遊べる時間: <%= t("enums.post.playtime.#{post.playtime}") %></p>
    <p>対象年齢:
      <% post.target_ages.each do |age| %>
        <%= age.age %>
      <% end %>
    </p>
    <p>タグ:
      <% post.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
    </p>
    <p>投稿者: <%= post.customer.name %></p>
    <p>投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
  </div>
<% end %>
