<div class="col-sm-12 col-md-11 col-lg-10 col-xl-8 mx-auto">
  <h1><%= @customer.name %>さんの会員情報編集</h1>
  <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <form>
      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">会員ID</label>
        <div class="col-md-9 form-row y-middle">
          <div class="col-md-4 d-flex align-items-center">
            <%= content_tag :div, @customer.id %>
          </div>
        </div>
      </div>
      
      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">プロフィール画像</label>
        <div class="col-md-9 form-row">
          <div class="col-md-8 mr-md-5 d-flex align-items-center">
            <%= f.file_field :profile_image, class: "form-control-file" %>
            <%= render "layouts/error", model: f, attribute: :profile_image %>
          </div>
        </div>
      </div>
    
      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">氏名</label>
        <div class="col-md-9 form-row">
          <div class="col-md-8 mr-md-5">
            <%= f.text_field :name, class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :name %>
          </div>
        </div>
      </div>

      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">ニックネーム</label>
        <div class="col-md-9 form-row">
          <div class="col-md-8 mr-md-5">
            <%= f.text_field :nickname, class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :nickname %>
          </div>
        </div>
      </div>

      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">メールアドレス</label>
          <div class="col-md-9 form-row y-middle">
            <div class="col-md-4 d-flex align-items-center">
              <%= content_tag :div, @customer.email %>
            </div>
          </div>
      </div>
      
      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">公開設定</label>
        <div class="col-md-9 form-row y-middle">
          <div class="col-5  d-flex align-items-center">
            <%= f.radio_button :is_hidden, false %>
            <%= f.label :is_hidden, "公開", value: false, class: "my-0 mr-3" %>
            <%= f.radio_button :is_hidden, true %>
            <%= f.label :is_hidden, "非公開", value: true, class: "m-0" %>
          </div>
        </div>
      </div>

      <div class="form-group row ml-3 mb-2">
        <label class="col-md-3 col-form-label">会員ステータス</label>
        <div class="col-md-9 form-row y-middle">
          <div class="col-5  d-flex align-items-center">
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効", value: false, class: "my-0 mr-3" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会", value: true, class: "m-0" %>
          </div>
        </div>
      </div>
      
      <div class="form-group row ml-3">
        <label class="col-md-3 col-form-label"></label>
        <div class="col-md-9 form-row">
          <div class="col-5">
            <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
          </div>
        </div>
      </div>
      
    </form>
  <% end %>
</div>