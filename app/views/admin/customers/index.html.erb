<div class="mx-auto col-12">
  <div class="d-flex justify-content-between">
    <h5 class="bg-light text-center ml-3 my-3 px-3" style="width: fit-content;">会員一覧</h5>
    <%= search_form_for @q, url: admin_customers_path do |f| %>
      <div class="d-flex">
        <%= f.search_field :name_or_email_or_nickname_cont, class: 'form-control mr-2', placeholder: '名前,ニックネーム,メール', style: "width: 250px;" %>
        <button class="btn btn-outline-success" type="submit" style="width: 80px; ">
          検索 <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th class="bg-light"><%= sort_link(@q, :created_at, "会員ID",class:"text-dark") %></th>
        <th class="bg-light"><%= sort_link(@q, :name, "氏名",class:"text-dark") %></th>
        <th class="bg-light">メールアドレス</th>
        <th class="bg-light"><%= sort_link(@q, :is_hidden, "公開設定",class:"text-dark") %></th>
        <th class="bg-light"><%= sort_link(@q, :is_deleted, "ステータス",class:"text-dark") %></th>
        <th class="bg-light">投稿数</th>
        <th class="bg-light"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.id, admin_customer_path(customer), class: "text-dark" %></td>
        <td><%= link_to customer.name, admin_customer_path(customer), class: "text-dark" %></td>
        <td><%= link_to customer.email, admin_customer_path(customer), class: "text-dark" %></td>
        <td class="<%= customer.is_hidden == false ? 'text-success' : 'text-muted' %>">
          <strong><%= customer.is_hidden == false ? '公開' : '非公開' %></strong>
        </td>
        <td class="<%= customer.is_deleted == false ? 'text-success' : 'text-muted' %>">
          <strong><%= customer.is_deleted == false ? '有効' : '退会' %></strong>
        </td>
        <td><%= customer.posts.count %></td>
         <td>
          <%= link_to admin_customer_path(customer), class: "text-info" do %>
            <i class="fa-solid fa-file-pen"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= paginate @customers, theme: 'bootstrap-5' %>
  </div>
</div>
