<div class="mx-auto col-12">
  <h5 class="bg-light text-center ml-3 my-3 px-3" style="width: fit-content;">
    <% if @customer %>
      <%= "#{@customer.name}さんのコメント一覧" %>
    <% elsif @post %>
      <%= "投稿ID「#{@post.id}」のコメント一覧" %>
    <% else %>
      投稿一覧
    <% end %>
  </h5>
  <table class="table">
    <thead>
      <tr>
        <th class="bg-light" style="width: 7%;">コメントID</th>
        <th class="bg-light" style="width: 6%;">投稿ID</th>
        <th class="bg-light" style="width: 15%;">投稿者</th>
        <th class="bg-light" style="width: 30%;">タイトル</th>
        <th class="bg-light" style="width: 10%;">作成日</th>
        <th class="bg-light" style="width: 2%;"></th>
      </tr>
    </thead>
    <tbody>
      <% @post_comments.each do |post_comment| %>
      <tr>
        <td><%= post_comment.id %></td>
        <td><%= link_to post_comment.post_id, admin_post_path(post_comment.post), class: "text-dark" %></td>
        <td><%= link_to post_comment.customer.name, admin_customer_path(post_comment.customer), class: "text-dark" %></td>
        <td><%= post_comment.comment %></td>
        <td><%= post_comment.created_at.strftime("%Y年%m月%d日") %></td>
        <td>
          <%= link_to admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "text-danger" do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= paginate @post_comments, theme: 'bootstrap-5' %>
  </div>
</div>
