<h1>投稿一覧</h1>

<% @posts.each do |post| %>
      <div class="row post">
        <div class="col-4">
            <%= post.playground.name %></br>
            <%= image_tag post.playground.photo_url, size: "180x120" %>
        </div>
        <%= link_to post_path(post.id), class: 'text-dark post' do %>
          <div class="col-8 d-flex">
            <div>
              <%= image_tag post.get_post_image(150, 100), class: "img-fluid" %>
            </div>
            <div>
              <h3><%= post.title %></h3>
              <p><%= post.text %></p>
              <p>評価: <%= post.rate %></p>
              <p>更新日時: <%= time_ago_in_words(post.updated_at) %>前</p>
            </div>
            <div>
              <!-- いいねボタン -->
              <div class="favorite-btn-<%= post.id %>">
                <% if customer_signed_in? %>
                  <%= render 'public/post_favorites/post_favorites', post_id: post.id , post: post %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <div class="nickname mb-2">
      <%= link_to customers_path(customer_id: post.customer.id), class: "badge-bg badge badge-pill badge-secondary" do %>
        <% if post.customer.is_hidden? %>
          非公開ユーザー
        <% elsif post.customer.is_deleted? %>
          退会済ユーザー
        <% else %>
          <%= post.customer.nickname %>
        <% end %>
      <% end %>
    </div>
<% end %>
<div class="pagination">
  <%= paginate @posts, theme: 'bootstrap-5' %>
</div>
