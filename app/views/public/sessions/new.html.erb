<div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 mx-auto">
  <h1>ログイン</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  
    <div class="text-center">
      <%= f.submit "ログイン", class: "btn btn-blue btn-block" %>
      <p class="mt-4 mb-2 pt-1 top-border"> 会員登録がまだの方はこちらから </p>
      <div class="form-group my-0">
        <%= link_to "新規登録", new_customer_registration_path , class: "btn btn-sm btn-outline-blue btn-block" %>
      </div>
      <p class="mt-4 mb-2 pt-1 top-border"> ゲストログインはこちらから（企業様用） </p>
      <div class="form-group">
        <%= link_to 'ゲストログイン（閲覧用）', public_guest_sign_in_path, method: :post, class: "btn btn-sm btn-outline-blue btn-block" %>
      </div>
    </div>
  <% end %>
</div>
