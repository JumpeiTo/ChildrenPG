<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="box1">
      <div class="box-inner">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
          <h1>新規登録</h1>

          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :name %>
          </div>
          
          <div class="form-group">
            <%= f.label :nickname, "ニックネーム" %>
            <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :nickname %>
          </div>
          
          <div class="form-group">
            <%= f.label :profile_image, "プロフィール画像" %>
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
          </div>
          
          <div class="form-group">
            <p>公開設定</p>
            <%= f.radio_button :is_hidden, false, id: "public-radio" %>
            <%= label_tag "public-radio", "公開" %>
            <%= f.radio_button :is_hidden, true, id: "private-radio" %>
            <%= label_tag "private-radio", "非公開" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :email %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :password %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード(確認)" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            <%= render "layouts/error", model: f, attribute: :password_confirmation %>
          </div>

          <div class="form-group">
            <%= f.submit "新規登録", class: "btn btn-blue btn-block" %>
          </div>
        <% end %>

        <div class="box-newusr text-center">
          <p class="mt-4 mb-2 pt-1 top-border"> 既に登録されていますか？ </p>
          <div class="form-group">
            <%= link_to "ログイン", new_customer_session_path , class: "btn btn-sm btn-outline-blue btn-block"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

